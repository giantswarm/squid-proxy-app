{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "controller": {
            "type": "object",
            "properties": {
                "maxSurge": {
                    "type": "integer"
                },
                "maxUnavailable": {
                    "type": "integer"
                },
                "minReadySeconds": {
                    "type": "integer"
                },
                "replicas": {
                    "type": "integer"
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "name": {
                            "type": "string"
                        },
                        "public": {
                            "type": "boolean"
                        }
                    }
                }
            }
        },
        "image": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "pullPolicy": {
                    "type": "string"
                },
                "registry": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            }
        },
        "name": {
            "type": "string"
        },
        "provider": {
            "type": "string"
        },
        "serviceType": {
            "type": "string"
        },
        "podSecurityContext": {
            "type": "object",
            "properties": {
                "seccompProfile": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "runAsNonRoot": {
                    "type": "boolean",
                    "default": true
                }
            }
        },
        "securityContext": {
            "type": "object",
            "properties": {
                "allowPrivilegeEscalation": {
                    "type": "boolean",
                    "default": false
                },
                "seccompProfile": {
                    "type": "object",
                    "properties": {
                        "type": {
                            "type": "string"
                        }
                    }
                },
                "capabilities":{
                    "type": "object",
                    "properties": {
                        "drop": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "default": ["ALL"]
                        }
                    }
                }
            }
        },
        "resources": {
            "type": "object",
            "properties": {
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "limits": {
                    "type": "object",
                    "properties": {
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        }
    }
}
